<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:background="@drawable/sfondosfumatura">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMusica"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/sfumatura"
        android:fontFamily="@font/coiny"
        android:text="Musica"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_play"
        android:drawablePadding="20dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/btnMusica"
        android:layout_marginTop="100dp"
        android:background="@drawable/sfumatura"
        android:fontFamily="@font/coiny"
        android:text="Info"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_play"
        android:drawablePadding="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/btnInfo"
        android:layout_marginTop="100dp"
        android:background="@drawable/sfumatura"
        android:fontFamily="@font/coiny"
        android:text="Esci"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:paddingHorizontal="20dp"
        android:drawableRight="@drawable/ic_play"
        android:drawablePadding="20dp"/>



</RelativeLayout>

