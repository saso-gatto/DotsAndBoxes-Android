<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mat.unical.it.dotsandboxes.MainActivity"
    android:background="@drawable/sfondosfumatura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/player1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:text="Giocatore 1"
                android:textColor="@color/azzurro"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/player1occupying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Punteggio 0"
                android:textSize="18dp"
                android:fontFamily="@font/coiny"
                android:textColor="@color/azzurro"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/playerNowPointer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/a1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player2name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DLV2"
                android:textSize="18dp"
                android:fontFamily="@font/coiny"
                android:textColor="@color/arancione"/>

            <TextView
                android:id="@+id/player2occupying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Punteggio 0"
                android:textSize="18dp"
                android:fontFamily="@font/coiny"
                android:textColor="@color/arancione" />
        </LinearLayout>
    </LinearLayout>

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <mat.unical.it.dotsandboxes.view.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backHome"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutRadioBtb2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sfumatura"
        android:fontFamily="@font/coiny"
        android:text="Torna alla Home"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_home"
        android:paddingHorizontal="15dp"/>


</LinearLayout>
